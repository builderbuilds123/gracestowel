      "name": "Health Workers",
      "item": [
        {
          "name": "Get Workers Health",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// JSON Schema for Workers Health Response - Contract Test",
                  "const workersHealthSchema = {",
                  "    type: 'object',",
                  "    required: ['redis', 'stripeEventQueue', 'paymentCaptureQueue', 'errors'],",
                  "    properties: {",
                  "        redis: {",
                  "            type: 'object',",
                  "            required: ['connected'],",
                  "            properties: {",
                  "                connected: { type: 'boolean' },",
                  "                error: { type: ['string', 'null'] }",
                  "            }",
                  "        },",
                  "        stripeEventQueue: {",
                  "            type: ['object', 'null'],",
                  "            properties: {",
                  "                waiting: { type: 'number' },",
                  "                active: { type: 'number' },",
                  "                delayed: { type: 'number' },",
                  "                completed: { type: 'number' },",
                  "                failed: { type: 'number' }",
                  "            }",
                  "        },",
                  "        paymentCaptureQueue: {",
                  "            type: ['object', 'null'],",
                  "            properties: {",
                  "                waiting: { type: 'number' },",
                  "                active: { type: 'number' },",
                  "                delayed: { type: 'number' },",
                  "                completed: { type: 'number' },",
                  "                failed: { type: 'number' }",
                  "            }",
                  "        },",
                  "        paymentCaptureDelayedJobs: {",
                  "            type: ['array', 'null'],",
                  "            items: {",
                  "                type: 'object'",
                  "            }",
                  "        },",
                  "        errors: {",
                  "            type: 'array',",
                  "            items: { type: 'string' }",
                  "        }",
                  "    }",
                  "};",
                  "",
                  "pm.test('Response status is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Contract Test: Workers health response matches schema', function () {",
                  "    const response = pm.response.json();",
                  "    if (typeof tv4 !== 'undefined') {",
                  "        pm.expect(tv4.validate(response, workersHealthSchema)).to.be.true;",
                  "        if (!tv4.validate(response, workersHealthSchema)) {",
                  "            console.log('Schema validation error:', tv4.error);",
                  "        }",
                  "    } else {",
                  "        pm.expect(response).to.have.property('redis');",
                  "        pm.expect(response).to.have.property('errors');",
                  "    }",
                  "});"
                ]
              }
            }
          ],
          "id": "health-workers",
          "request": {

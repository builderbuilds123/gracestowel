  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Stripe Webhook Signature Generator",
          "// Generates a valid Stripe-Signature header for webhook testing",
          "",
          "const webhookSecret = pm.environment.get('stripe_webhook_secret') || pm.collectionVariables.get('stripe_webhook_secret');",
          "",
          "if (!webhookSecret) {",
          "    console.error('ERROR: stripe_webhook_secret is not set. Please configure it in your environment.');",
          "    throw new Error('stripe_webhook_secret environment variable is required');",
          "}",
          "",
          "// Get the request body",
          "const payload = pm.request.body.raw;",
          "",
          "if (!payload) {",
          "    console.error('ERROR: Request body is empty');",
          "    throw new Error('Request body is required for webhook signature generation');",
          "}",
          "",
          "// Generate timestamp (seconds since epoch)",
          "const timestamp = Math.floor(Date.now() / 1000);",
          "",
          "// Create the signed payload string: timestamp.payload",
          "const signedPayload = `${timestamp}.${payload}`;",
          "",
          "// Generate HMAC-SHA256 signature using CryptoJS",
          "const signature = CryptoJS.HmacSHA256(signedPayload, webhookSecret).toString(CryptoJS.enc.Hex);",
          "",
          "// Create the Stripe-Signature header value",
          "// Format: t=timestamp,v1=signature",
          "const stripeSignature = `t=${timestamp},v1=${signature}`;",
          "",
          "// Set the header for this request",
          "pm.request.headers.upsert({",
          "    key: 'Stripe-Signature',",
          "    value: stripeSignature",
          "});",
          "",
          "console.log('Stripe signature generated successfully');",
          "console.log('Timestamp:', timestamp);",
          "console.log('Signature header:', stripeSignature);"
        ]
      }
    }

{
  "name": "gracestowel-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "dev:storefront": "npm run dev --workspace=apps/storefront",
    "deploy:storefront": "npm run deploy --workspace=apps/storefront",
    "dev:api": "npm run dev --workspace=apps/api",
    "deploy:api": "npm run deploy --workspace=apps/api",
    "dev:background": "npm run dev --workspace=apps/background",
    "deploy:background": "npm run deploy --workspace=apps/background",
    "test": "turbo run test",
    "test:storefront": "npm run test --workspace=apps/storefront",
    "test:backend": "npm run test:integration --workspace=apps/backend",
    "test:e2e": "npm run test --workspace=apps/e2e",
    "test:e2e:ui": "npm run test:ui --workspace=apps/e2e",
    "test:e2e:headed": "npm run test:headed --workspace=apps/e2e",
    "test:resilience": "npm run test:resilience --workspace=apps/e2e",
    "test:e2e:ci": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit --exit-code-from playwright 2>&1 | tee e2e-ci.log",
    "test:e2e:ci:logs": "docker compose -f docker-compose.test.yml logs -f",
    "test:e2e:ci:logs:backend": "docker compose -f docker-compose.test.yml logs -f backend",
    "test:e2e:ci:logs:storefront": "docker compose -f docker-compose.test.yml logs -f storefront",
    "test:e2e:ci:logs:playwright": "docker compose -f docker-compose.test.yml logs -f playwright",
    "test:e2e:ci:down": "docker compose -f docker-compose.test.yml down -v"
  },
  "dependencies": {
    "@railway/cli": "^4.12.0"
  },
  "engines": {
    "node": ">=24"
  },
  "overrides": {
    "jws": "3.2.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.14",
    "turbo": "^2.5.0",
    "vitest": "^4.0.14"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.40.0"
  }
}

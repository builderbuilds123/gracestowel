{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["build/**", "dist/**", ".medusa/**"]
    },
    "test": {
      "dependsOn": [],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "RESEND_API_KEY", "TEST_TYPE"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "tests/**",
        "support/**",
        "playwright.config.ts"
      ],
      "outputs": [
        "test-results/**",
        "playwright-report/**",
        ".playwright/**"
      ],
      "env": [
        "CI",
        "STOREFRONT_URL",
        "MEDUSA_PUBLISHABLE_KEY",
        "ADMIN_TOKEN",
        "E2E_FAST"
      ],
      "cache": true,
      "persistent": false
    },
    "test:all": {
      "dependsOn": ["test", "test:e2e"],
      "cache": false,
      "persistent": false
    },
    "lint": {
      "dependsOn": [],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": [],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": []
    }
  }
}
